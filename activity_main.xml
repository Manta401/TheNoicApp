<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/beep1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Burden is Light" />

        <Button
            android:id="@+id/beep2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Someplace I Know" />

        <Button
            android:id="@+id/beep3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phosphor" />

        <Button
            android:id="@+id/beep4Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Prophecy" />

        <Button
            android:id="@+id/beep5Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abandoned Factory" />

        <Button
            android:id="@+id/beep6Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silverpoint" />

        <Button
            android:id="@+id/beep7Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A God's Machine" />

        <Button
            android:id="@+id/beep8Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geothermal" />

        <Button
            android:id="@+id/beep9Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distant" />

        <Button
            android:id="@+id/beep10Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Into The Light" />

    </LinearLayout>
</ScrollView>
